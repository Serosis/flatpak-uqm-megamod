{
    "app-id": "com.github.serosis.UQM_MegaMod",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "UrQuanMasters",
    "finish-args": [
        "--share=network",
        "--socket=x11",
        "--device=dri",
        "--share=ipc",
        "--socket=pulseaudio",
        "--device=all",
        "--persist=.uqm-megamod"
    ],
    "modules": [
        {
            "name": "glu",
            "config-opts": ["--disable-static"],
            "sources": [
                {
                    "type": "archive",
                    "url": "ftp://ftp.freedesktop.org/pub/mesa/glu/glu-9.0.0.tar.gz",
                    "sha256": "4387476a1933f36fec1531178ea204057bbeb04cc2d8396c9ea32720a1f7e264"
                }
            ],
            "cleanup": [
                "/include", "/lib/*.la", "/lib/*.a", "/lib/pkgconfig"
            ]
        },
        {
            "name": "libmikmod",
            "config-opts": ["--disable-static"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/mikmod/files/libmikmod/3.3.11.1/libmikmod-3.3.11.1.tar.gz",
                    "sha256": "ad9d64dfc8f83684876419ea7cd4ff4a41d8bcd8c23ef37ecb3a200a16b46d19"
                }
            ],
            "cleanup": [
                "/bin", "/share/man", "/share/info", "/share/aclocal", "/include", "/lib/*.la", "/lib/*.a", "/lib/pkgconfig"
            ]
        },
        {
            "name": "sdl",
            "config-opts": ["--disable-static"],
            "rm-configure": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libsdl.org/release/SDL-1.2.15.tar.gz",
                    "sha256": "d6d316a793e5e348155f0dd93b979798933fb98aa1edebcc108829d6474aad00"
                },
                {
                    "type": "patch",
                    "path": "sdl-xdata32.patch"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "sed -i -e 's/.*AM_PATH_ESD.*//' configure.in",
                        "cp -p /usr/share/automake-*/config.{sub,guess} build-scripts",
                        "aclocal",
                        "libtoolize",
                        "autoconf"
                    ]
                }
            ],
            "cleanup": [
                "/bin", "/share/man", "/share/aclocal", "/include", "/lib/pkgconfig", "/lib/*.la", "/lib/*.a", "/lib/pkgconfig"
            ]
        },
        {
            "name": "SDL_image",
            "config-opts": ["--disable-static"],
            "rm-configure": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libsdl.org/projects/SDL_image/release/SDL_image-1.2.12.tar.gz",
                    "sha256": "0b90722984561004de84847744d566809dbb9daf732a9e503b91a1b5a84e5699"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "AUTOMAKE=\"automake --foreign\" autoreconf -vfi"
                    ]
                }
            ],
            "cleanup": [
                "/include", "/lib/*.la", "/lib/*.a", "/lib/pkgconfig"
            ]
        },
        {
            "name": "desktop-resources",
            "sources": [
                {
                    "type": "file",
                    "path": "com.github.serosis.UQM_MegaMod.png"
                },
                {
                    "type": "file",
                    "path": "com.github.serosis.UQM_MegaMod.desktop"
                },
                {
                    "type": "file",
                    "path": "com.github.serosis.UQM_MegaMod.appdata.xml"
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/applications",
                "cp com.github.serosis.UQM_MegaMod.desktop /app/share/applications/com.github.serosis.UQM_MegaMod.desktop",
                "mkdir -p /app/share/icons/hicolor/256x256/apps",
                "cp com.github.serosis.UQM_MegaMod.png /app/share/icons/hicolor/256x256/apps/com.github.serosis.UQM_MegaMod.png",
                "mkdir -p /app/share/appdata",
                "cp com.github.serosis.UQM_MegaMod.appdata.xml /app/share/appdata/com.github.serosis.UQM_MegaMod.appdata.xml"
            ]
        },
        {
            "name": "UQM-MegaMod",
            "sources": [
                    {
                        "type": "git",
                        "url": "https://github.com/Serosis/UQM-MegaMod.git",
                        "tag": "0.8.0.82",
                        "commit": "0bee7c04804126e6d7680737e7750f00cb1d9208"
                    },
                    {
                        "type": "file",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-0.7.0-3domusic.uqm?download",
                        "sha256": "c57085e64dad4bddf8a679a9aa2adf63f2156d5f6cbabe63af80519033dbcb82",
                        "dest-filename": "uqm-0.7.0-3domusic.uqm"
                    },
                    {
                        "type": "file",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-remix-disc1.uqm?download",
                        "sha256": "b697694745d939311e8ebffdd5edf692e010c25d7966e1481074940a4d0487e8",
                        "dest-filename": "uqm-remix-disc1.uqm"
                    },
                    {
                        "type": "file",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-remix-disc2.uqm?download",
                        "sha256": "7fbb4744102e31273e4459b01a156da052ec537c128fe91793643e348bc1bade",
                        "dest-filename": "uqm-remix-disc2.uqm"
                    },
                    {
                        "type": "file",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-remix-disc3.uqm?download",
                        "sha256": "e6d89f8f66cf1df1cb278fca1e92261b1776ee670dff26132e33f14dbd31e91d",
                        "dest-filename": "uqm-remix-disc3.uqm"
                    },
                    {
                        "type": "file",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-remix-disc4.uqm?download",
                        "sha256": "a4c8197712a5b72a81c7ef7a2a33ea7d3ac90ab063c929dd68e7328a559a86d0",
                        "dest-filename": "uqm-remix-disc4.uqm"
                    },
                    {
                        "type": "file",
                        "url": "http://files.serosis.net/MegaMod/uqm-0.8.0-3dovoice.uqm",
                        "sha256": "1524a034049be7a39ec30cd45781247a520b70717e839d9af8eccff3789a10ae"
                    },
                    {
                        "type": "file",
                        "url": "http://files.serosis.net/MegaMod/uqm-0.7.0-3DOMusicRemastered.uqm",
                        "sha256": "874fb3d52419b958670a5b62d8d657f5693c6aa31cb2a5b07819bb9c71794638"
                    },
                    {
                        "type": "file",
                        "url": "http://files.serosis.net/MegaMod/uqm-0.7.0-3dovideo.uqm",
                        "sha256": "d61eb7dc5116cc79cef8f8b5ea699d710ee13433a368f52c2fa6b9fc762ae9a2"
                    },
                    {
                        "type": "file",
                        "url": "http://files.serosis.net/MegaMod/uqm-mm-hires4x.uqm",
                        "sha256": "36419d8f4508ab5965320065a0616582b43791bc0d612f358da1e8a232ab4b2e"
                    }
            ],
            "build-options": {
                "env": {
                    "INPUT_install_prefix_VALUE": "/app",
                    "INPUT_install_bindir_VALUE": "/app/bin",
                    "INPUT_install_libdir_VALUE": "/app/lib",
                    "INPUT_install_sharedir_VALUE": "/app/share"
                }
            },
            "buildsystem": "simple",
            "build-commands": [
                "./build.sh uqm",
                "./build.sh uqm install",
                "mkdir -p /app/share/uqm-megamod/content/addons",
                "cp *.uqm /app/share/uqm-megamod/content/addons"
            ]
        }
    ]
}